Page{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.settings-panel{
  display: flex;
  flex-direction: column;
  /* padding: 50rpx 50rpx 50rpx 50rpx; */
}

.title{
  display: flex;
  font-size: 25rpx;
  align-items: center;
  padding-left: 20rpx;
  color: #888888;
  margin: 30rpx auto 16rpx auto;
  /* border-radius: 20rpx; */
  /* box-shadow: darkgrey 1px 1px 3px 1px; */
  /* padding-left: 30rpx; */
  /* background-color:#fff9f2; */
}

.content{
  display: flex;
  flex-direction: column;
  width: 100%;
}


.one-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  width: 100%;
  background-color: white;
  color: #616161;
  /* line-height: 0rpx; */

  /* margin: 1rpx auto 5rpx auto; */
  padding-left: 20rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;

  
  /* border */
  border-top: 2rpx solid #eee;
}



.one-row-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}


.one-row-right-arrow{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: -10rpx;
}


.avatar{
  width: 100rpx;
  height: 100rpx;
  overflow:hidden;
  border: 0 solid #ffffff;
  border-radius: 50%;
  background-size: 100% 100%;
}


.radio{
  margin-right: 5rpx;
  font-size: 42.8rpx;
  width: 10rpx;
  height: 10rpx;
}


radio{ transform:scale(.7) }

.if-open-reminder{
  margin-left: 20rpx;
}

switch{ transform:scale(.7) }

checkbox{ transform:scale(.7)  }


.save-button{
  /* position: fixed; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin: 60rpx auto auto 270rpx;
  width: 200rpx;
  height: 80rpx;
  border-radius: 4px;
  background-color: #feddbb;
  color: #616161;
}

button{
  background-color: transparent;
  border-radius: 0;
  line-height: 35rpx;
  font-size: 30rpx;
  width: 100%;
}



/* 去除button边框 */
button::after{
  border: none;
}






/* 弹窗部分 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 32%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 40rpx;
  color: #030303;
  text-align: center;
}

.modal-subtitle{
  padding-top: 15rpx;
  font-size: 25rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 30rpx;
}

.textarea {
  width: 100%;
  height: 300rpx;
  min-height:  300rpx;
  font-size: 30rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  color: #333;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 30rpx;
  line-height: 86rpx;
  align-items: center;
}

.btn-cancel {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  color: #9d9fa2;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
  color: #fd9731;
  text-align: center;
}
/* 弹窗结束 */




button{
  background-color: transparent;
  font-size: 30rpx;
  text-align: center;
}


button::after{
  border:none;
}
