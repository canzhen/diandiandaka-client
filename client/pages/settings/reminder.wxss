Page{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.image{
  width: 40rpx;
  height: 40rpx;
  /* margin-right:40rpx; */
}

.punched-image{
  width: 30rpx;
  height: 30rpx;
  margin-left: -30rpx;
}

.reminder-panel{
  display: flex;
  flex-direction: column;
  /* padding: 50rpx 50rpx 50rpx 50rpx; */
}

.title{
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  align-items: center;
  padding-left: 20rpx;
  color: #888888;
  margin: 30rpx auto 16rpx auto;
  /* border-radius: 20rpx; */
  /* box-shadow: darkgrey 1px 1px 3px 1px; */
  /* padding-left: 30rpx; */
  /* background-color:#fff9f2; */
}

.content{
  display: flex;
  flex-direction: column;
  width: 100%;
}


.one-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  width: 100%;
  background-color: white;
  color: #616161;
  /* line-height: 0rpx; */

  /* margin: 1rpx auto 5rpx auto; */
  padding-left: 20rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;

  
  /* border */
  border-bottom: thin solid #dadada83;
}

.one-row-right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}


.one-row-right-arrow{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
}


.save-button{
  /* position: fixed; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin: 60rpx auto auto 270rpx;
  width: 200rpx;
  height: 80rpx;
  border-radius: 4px;
  background-color: #feddbb;
  color: #616161;
}

button{
  background-color: transparent;
  border-radius: 0;
  line-height: 35rpx;
  font-size: 30rpx;
  width: 100%;
}



/* 去除button边框 */
button::after{
  border: none;
}
