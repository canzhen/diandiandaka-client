page{
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  position: fixed;
}

.navbar{
  flex: none;
  display: flex;
  background: #fff;
  margin-top: 15rpx;
}

.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active{
  color: #feb873;
}

.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 7rpx;
  background: #fee0c1;
}



/* 所有历史部分 */

.all-history-panel{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 20rpx;
}

.all-history-left{
  display: flex;
  flex-direction: column;
  width: 15%;
  height: 100%;
  margin: 80rpx -10rpx 0rpx 10rpx;
  color: #888888;
}

.all-history-left-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align:center;
  justify-content:center;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.all-history-left-image{
  width: 75rpx;
  height: 75rpx;
}

.all-history-left-bottom{
  position: fixed;
  width: 50rpx;
  left: 10rpx;
  top: 990rpx;
}

.all-history-left-bottom-image-left{
  width: 40rpx;
  height: 40rpx;

  position: fixed;
  left: 10rpx;
  top: 985rpx;
}

.all-history-left-bottom-image-right{
  width: 40rpx;
  height: 40rpx;

  position: fixed;
  left: 80rpx;
  top: 985rpx;
}


.all-history-right{
  display: flex;
  flex-direction: column;
  width: 85%;
  height: 100%;
  margin-top: 10rpx;
}


image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.all-history-first-row{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
  margin: 0rpx 10rpx 10rpx -10rpx;
  font-size: 30rpx;
  color: #888888;
}

.all-history-emphasize{
  font-weight:900;
}

.calendar-panel{
  display: flex; 
  flex-direction: row;
  height: 380rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
  background-color: #f6f6f6;
  padding-bottom: 20rpx;

  border-radius: 20rpx;
  box-shadow: 1px 1px 2px 2rpx #f4f3f3;
}

.year-month-circle{
  /* 形状、位置 */
  width: 150rpx;
  height: 150rpx;
  margin: 130rpx 10rpx 130rpx 20rpx;

  /* 圆形相关 */
  border: 0 solid #fff;
  border-radius: 500px;
  background-size:100% 100%;
  display: flex;
  align-items: center;
  text-align:center;
  justify-content:center;
}

.year-month-text{
  /* margin-top: 100rpx; */
  color:#fff;
  /* font-size:30rpx;  */
}

.calendar-right-part{
  width: 410rpx;
  height:440rpx;
  display:flex;
  flex-direction: column; 
  margin: 20rpx 0rpx 30rpx 0rpx;
}

.calendar-days-row{
  display: flex; 
  flex-direction: row;
  margin-left: 15rpx;
  margin-right: 15rpx; 
}


.calendar-days-each-item{
  width: 85rpx;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
  margin-bottom:10rpx;
  color: #8c8c8c;
}

.select-topic-picker{
  width: 230rpx;
  /* height: rpx; */
  padding: 2rpx 5rpx 2rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #f4f3f3;
  background-color: rgba(0,0,0,0.02);
  border-radius: 7rpx;
  box-shadow: 1px 1px 2px 2rpx #f4f3f3;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.all-history-first-row-right{
  margin-left: 15rpx;
}

.checked{
  /* width: 60rpx;
  height: 60rpx; */
  margin-left: -40rpx;
}

.all-history-last-row{
  display: flex;
  flex-direction: row-reverse;
  margin:10rpx 20rpx 20rpx 10rpx;
  color: #888888;
}
/* 所有历史部分结束 */


