 /* 每日完成度部分开始  */

 .completeness-panel{
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  height: 95%;
  margin: 20rpx, 50rpx, 20rpx, 50rpx;
 }


 .completeness-first-row{
  display:flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 5%;
 }

.completeness-canvas{
  display:flex;
  position: fixed;
  flex-direction: row;
  justify-content: space-around; 
  left: 3.8%;
  width: 95%;
  height: 70%;
  top: 15%;
  margin-top: 40rpx;
  margin-right: 5%;
  /* width: 95%;
  height: 600rpx; */
}

 .completeness-panel-bottom{
  display:flex;
  flex-direction: row;
  justify-content: space-around; 
  position: fixed;
  bottom: 5%;
  left: 4%;
  width: 90%;
 }


.completeness-button{
  width: 120rpx;
  height: 60rpx;
  margin-right: 1%;

  /* text */
  font-size: 22rpx; 
  color: #000000;
  text-align: center;
  padding-top: 4rpx; 

  
  /* shape */
  border: none;
  border-radius: 4px;
  background-color: #feddbb;
}


.completeness-button-checked{
  width: 120rpx;
  height: 60rpx;
  margin-right: 1%;

  /* text */
  font-size: 24rpx; 
  font-family: bold;
  color: #000000;
  text-align: center;
  padding-top: 3rpx; 

  
  /* shape */
  border: none;
  border-radius: 4px;
  background-color: #f8cd9b;
}

/* 去除button边框 */
button::after{
  border: none;
}

.subitem-row{
  display:flex;
