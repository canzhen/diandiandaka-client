<view style="display:flex; flex-direction:column;">
  <view class="me-upper-part">
    <!-- 背景墙 -->
    <view class="top-background"></view>
    <!-- 头像 -->
    <open-data type="userAvatarUrl" class="avatar" mode="aspectFill" bindtap="checkimg"></open-data>
    <!-- 用户名 -->
    <open-data type="userNickName" lang="zh_CN" class="username"></open-data>
    <!-- 用户唯一标识：openid -->
    <text class="openid">用户id：000001</text>

    <text class="edit-data" bindtap="editPersonalData">编辑个人资料 ></text>
  </view>

  <scroll-view class="me-lower-part" style="height:{{scrollHeight}}px;" scroll-y scroll-with-animation enable-back-to-top >
    <!-- 设置 -->
    <!-- <view class="me-lower-part-each-item">
      <image class="image" src="/images/kapian.png"></image>
      <text> 我的卡片 </text>
    </view> -->

    <!-- 意见反馈 -->
    <!-- <view class="me-lower-part-each-item">
      <image class="image" src="/images/fankui.png"></image>
      <text> 意见反馈 </text>
    </view> -->


    <view class="me-lower-part-row" wx:for="{{topic_num_list}}" wx:for-item="row" wx:key="key">
      <view class="me-lower-part-item" wx:for="{{row}}" wx:for-item="idx" wx:key="key">
        <view class="me-card">
          {{topic_list[idx].topic_name}}
        </view>
      </view>
    </view>

    
  </scroll-view>
  
</view>