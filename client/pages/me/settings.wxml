<view class="settings-panel">
  <form bindsubmit="saveSettings" report-submit="true">
    <view class="title"> 基本设置 </view>
    <view class="line"></view>

    <view class="content">
      <view class="one-line">
        <text>用户名：</text>
        <input bindchange="usernameInputChange" value="{{user_name}}" placeholder="默认为微信名" wx:if="{{is_reset_name}}"></input>
        <open-data type="userNickName" lang="zh_CN" wx:if="{{!is_reset_name}}"></open-data>
      </view>

      <view class="one-line">
        <text>地　区：</text>
        <import src="../../vendor/area-picker/picker.wxml"/>
        <view class="infoText" bindtap="translate">{{province}} {{city}} {{county}}</view>
        <!-- <button class="animation-button" bindtap="translate">选择城市</button> -->
        <template is="areaData" data="{{...areaPickerItem}}"/>
      </view>


      <view class="one-line">
        <text>性　别：</text>
        <radio-group style="margin-left:-5rpx;" bindchange="radioChange">
          <label class="radio" wx:for="{{radioItems}}" wx:key="key">
            <radio value="{{item.name}}" checked="{{item.checked}}">
            {{item.value}}
            </radio> 
          </label>
        </radio-group>
      </view>
    </view>


    <view class="title" style="margin-top: 50rpx;"> 提醒设置 </view>
    <view class="line"></view>

    <view class="content">
      <view class="topic-remind-oneline1">
        <text>是否开启微信通知打卡</text>
        <switch class="if-open-reminder" bindchange="switchChange" checked="{{is_remind_switch_on}}"/>
      </view>

      <scroll-view style="height:{{scrollHeight}}px;" scroll-y scroll-with-animation enable-back-to-top>
        <view wx:if="{{show_topic_panel}}">

          <picker wx:if="{{show_topic_panel}}" mode="time" value="{{remind_time}}" start="00:00" end="23:59" data-topic-name="{{item.topic_name}}" class="topic-remind-oneline" bindchange="bindTimeChange">
          设置提醒时间：{{remind_time}}
          </picker>

          <view class="topic-remind-oneline" wx:for="{{topic_list}}" wx:for-item="item" wx:for-index="index" wx:key="key">
            <text>{{item.topic_name}}</text>
            <checkbox-group data-index="{{index}}" bindchange="topicRemindChange">
              <checkbox style='margin-right:30rpx;' checked="{{item.checked}}"/>
            </checkbox-group>
          </view>
        </view>
      </scroll-view>
    </view>
    
    


    <button class="save-button" form-type="submit"> 
      保存设置 
    </button>
  </form>
</view>