@import '../../vendor/area-picker/picker.wxss';

Page{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
}

.settings-panel{
  display: flex;
  flex-direction: column;
  /* padding: 50rpx 50rpx 50rpx 50rpx; */
}

.title{
  display: flex;
  font-size: 35rpx;
  align-items: center;
  height: 60rpx;
  margin: 50rpx 50rpx 0rpx 50rpx;
  /* border-radius: 20rpx; */
  /* box-shadow: darkgrey 1px 1px 3px 1px; */
  /* padding-left: 30rpx; */
  /* background-color:#fff9f2; */
}

.content{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.line{
  margin: 0rpx 50rpx 20rpx 50rpx;
  height: 2rpx;
  background:#aaa;
}

.one-line{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  margin: 0rpx 50rpx 0rpx 50rpx;
}


.radio{
  margin-right: 5rpx;
  font-size: 42.8rpx;
  width: 10rpx;
  height: 10rpx;
}


radio{ transform:scale(.7) }

.if-open-reminder{
  margin-left: 20rpx;
}

switch{ transform:scale(.7) }

checkbox{ transform:scale(.7)  }

.topic-remind-oneline{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  margin: 0rpx 50rpx 0rpx 50rpx;
}


.topic-remind-oneline1{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  margin: 0rpx 50rpx 0rpx 50rpx;
}

.save-button{
  /* position: fixed; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin: 20rpx auto auto 270rpx;
  width: 200rpx;
  height: 80rpx;
  border-radius: 4px;
  background-color: #feddbb;
}


/* 去除button边框 */
button::after{
  border: none;
}