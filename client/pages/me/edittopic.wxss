Page{
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  position: fixed;
}

/* 去除button边框 */
button::after{
  border: none;
}

.topic-name{
   /* margin-top: 5rpx;  */
   width: 21%;
}

.topic-name-right{
  /* margin-top: 5rpx; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  width: 79%;
}

/* 单选钮样式 */
checkbox {
  margin-top: 3rpx; 
  transform:scale(0.6);
}


.line{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  width: 600rpx;
  height:2rpx;
  background:#aaa;
}

.pick-icon-text{
  display: flex;
  flex-direction: row;
  /* margin-top: 40rpx; */
  /* margin-bottom: 20rpx; */
  align-items: center;
}


/* 展示图标的整块左右可滑动的区域 */
.icon-image-scroll-view{
  height: 550rpx;
}

/* 大的整块选择图标区域 */
.icon-image-view{
  display:flex; 
  flex-direction:row;
}

/* 每一行 */
.topic-image-row{
  display:flex; 
  flex-direction:column; 
  justify-content: space-around;
  margin-left: 7rpx;
  /* margin-right: 2rpx;  */
}

/* 每一个卡片 */
.icon-image-each-item{
  width: 115rpx;
  height: 115rpx;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  margin-right:5rpx;
}

.icon-image-each-item image{
  width: 75rpx;
  height: 75rpx;
}

.image {
  width: 75rpx;
  height: 75rpx;
}

.image-punched-in {
  width: 40rpx;
  height: 40rpx;
  margin-left: -40rpx;
}

.new-topic-button{
  position: fixed;
  top: 89%;
  left: 20%;
  width: 180rpx;
  height: 85rpx;
  /* margin: auto 70rpx 90rpx 220rpx; */

  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;

  /* text */
  font-size: 30rpx; 
  color: #000000;
  text-align: center;
  /* padding-top: 12rpx; */

  
  /* shape */
  border-radius: 4px;
  background-color: #feddbb;
  border: none;
}


.delete-topic-button{
  position: fixed;
  top: 89%;
  left: 55%;
  width: 180rpx;
  height: 85rpx;
  /* margin: auto 70rpx 90rpx 220rpx; */

  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;

  /* text */
  font-size: 30rpx; 
  color: #000000;
  text-align: center;
  /* padding-top: 12rpx; */

  
  /* shape */
  border-radius: 4px;
  background-color: #ffbbbb;
  border: none;
}


