Page{
  font-size: 30rpx;
  color:#7a7e82;
  display: flex;
  flex-direction: column;
}

.top-background{
  width: 100%;
  height: 100rpx;
  background: #fee0c1;
  z-index: -200;
}

.first-line-view{
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  align-items: center;
}

.avatar{
  margin-top: -90rpx;
  /* margin-left: 288rpx; */
  width: 180rpx;
  height: 180rpx;
  overflow:hidden;
  border: 0 solid #ffffff;
  border-radius: 50%;
  background-size: 100% 100%;
}

.username{
  margin-top: 15rpx;
  /* margin-left: 330rpx; */
}

.notopic-reminder{
  display:flex; 
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}

/* 每一行 */
.topic-image-row{
  display:flex; 
  flex-direction:row; 
  margin-bottom: 30rpx; 
  margin-left: 20rpx; 
  margin-right: 20rpx;
  align-items: space-between;
  justify-content: space-between;
}

/* 每一个卡片 */
.topic-image-each-item{
  display: flex; 
  flex-direction: column;
  width: 220rpx;
  /* height: 200rpx; */
  margin-left: 5rpx;
  margin-right: 5rpx; 
  align-items: center;
  justify-items: space-between;
  justify-content: space-between;
}

.topic-image-row:after{
  content: "";
  flex: auto;
}

/* 每一个图片 */
.topic-image-each-image{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  margin-bottom:15rpx;
}

.topic-image-each-item image{
  width: 100rpx;
  height: 100rpx;
  z-index: 0;
}

.image {
  width: 100rpx;
  height: 100rpx;
  z-index: 0;
}

.image-punched-in {
  width: 80rpx;
  height: 80rpx;
  margin-left: -80rpx;
  z-index: 2;
}

.add-new-card-view{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  margin-top:30rpx;
}

/* 弹窗部分 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 32%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 40rpx;
  color: #030303;
  text-align: center;
}

.modal-subtitle{
  padding-top: 15rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 30rpx;
}

.textarea {
  width: 100%;
  height: 300rpx;
  min-height:  300rpx;
  font-size: 30rpx;
  line-height: 28rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  color: #333;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 30rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #9d9fa2;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #fd9731;
  text-align: center;
}

/* 弹窗结束 */

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}


button{
  background-color: transparent;
}


button::after{
  border:none;
}
