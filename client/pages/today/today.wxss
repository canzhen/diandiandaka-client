Page{
  font-size: 30rpx;
  color:#7a7e82;
  display: flex;
  flex-direction: column;
}

.top-background{
  width: 100%;
  height: 100rpx;
  background: #fee0c1;
  z-index: -1;
}

.first-line-view{
  margin-bottom: 40rpx;
}

.avatar{
  margin-top: -90rpx;
  margin-left: 288rpx;
  width: 180rpx;
  height: 180rpx;
  overflow:hidden;
  border: 0 solid #ffffff;
  border-radius: 50%;
  background-size: 100% 100%;
  z-index: 100;
}

.username{
  margin-top:30rpx;
  margin-left: 330rpx;
}

.notopic-reminder{
  display:flex; 
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}

/* 每一行 */
.topic-image-row{
  display:flex; 
  flex-direction:row; 
  margin-bottom: 30rpx; 
  margin-left: 20rpx; 
  margin-right: 20rpx;
  align-items: space-between;
  justify-content: space-between;
}

/* 每一个卡片 */
.topic-image-each-item{
  display: flex; 
  flex-direction: column;
  width: 220rpx;
  /* height: 200rpx; */
  margin-left: 5rpx;
  margin-right: 5rpx; 
  align-items: center;
  justify-items: space-between;
  justify-content: space-between;
}

.topic-image-row:after{
  content: "";
  flex: auto;
}

/* 每一个图片 */
.topic-image-each-image{
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items: center;
  margin-bottom:15rpx;
}

.topic-image-each-item image{
  width: 100rpx;
  height: 100rpx;
  z-index: 0;
}

.image {
  width: 100rpx;
  height: 100rpx;
  z-index: 0;
}

.image-punched-in {
  width: 80rpx;
  height: 80rpx;
  margin-left: -80rpx;
  z-index: 2;
}

.add-new-card-view{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  margin-top:30rpx;
}


::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
