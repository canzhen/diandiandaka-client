Page{
  font-size: 30rpx;
  color:#7a7e82;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


image{
  border-radius: 50%;
}


.first-line-view{
  display:flex; 
  flex-direction:row; 
  margin-top: 60rpx; 
  margin-bottom: 80rpx;
}


.new-topic-input{
  width: 450rpx;
  height: 80rpx;
  margin-right: 20rpx;

  border-style: solid;
  border-width: 1px;
  border-color: #BBBBBB;
  border-radius: 4px;
}

.new-topic-input,
.new-topic-input::-webkit-input-placeholder {
    /* font-size: 30rpx; */
    padding: 0rpx 20rpx 0rpx 20rpx;
}

.new-topic-button{
  width: 200rpx;
  height: 85rpx;

  text-align: center;
  padding-top: 7rpx;

  /* font */
  font-size: 30rpx; 
  color: #000000;
  
  /* shape */
  border-radius: 4px;
  background-color: #feddbb;
  border: none;
}

.second-line-view{
  display:flex; 
  flex-direction:row; 
  margin-bottom: 50rpx;
}


.line-left{
  width: 230rpx;
  height:2rpx;
  background:#aaa;
}

.line-right{
  width: 230rpx;
  height:2rpx;
  background:#aaa;
}

.hot-topic-string{
  margin: -20rpx 20rpx 0rpx 20rpx;
}

.hot-topic-panel{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hot-topic-item-button{
  display:flex; 
  flex-direction:row; 
  align-items: center;
  margin-bottom:40rpx;
  font-size: 30rpx;

  line-height: 50rpx;
  color: #888888;
}


.image{
  width: 95rpx;
  height: 95rpx;
  margin-right: 60rpx;
}

.hot-topic-content{
  display:flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}


::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}




button{
  background-color: transparent;
}


button::after{
  border:none;
}
