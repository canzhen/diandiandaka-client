page{
  background-color: rgba(255, 255, 255, 1);
  z-index: 1500; 
}

.infoText{
    /* margin-top: 20rpx; */
  text-align: center;
  justify-content: center; 
  z-index: 1500;
}

.centerText{
  margin-top: 100rpx;
  width: 100%;
  text-align: center;
  z-index: 1500;
}

/* --------------分割线------------- */

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
  z-index: 1500;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1500;
}

.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
}

.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  z-index: 1500;
}

.animation-button {
  font-size: 27rpx;
  padding-bottom: 60rpx;
  height: 55rpx;
  align-items: center;
  justify-content: center;
  margin-right: 10%;
  z-index: 1500;
}


.animation-element text{
  color: #999999;
  display: inline-flex;  
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
  z-index: 1500;
}

.left-bt{
  left: 30rpx;
  z-index: 1500;
}
.right-bt {
  right: 30rpx;
  z-index: 1500;
}
